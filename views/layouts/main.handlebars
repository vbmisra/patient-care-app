<body class="container-md-fluid">
  <header>
    <nav class="d-flex justify-content-end">
  <button class="btn btn-dark"><a class="nav-link active" aria-current="page" href="#">Home</a></button>
    
    <!-- Only display the logout button if the user is logged in -->
    {{#if logged_in}}
      <button class="btn btn-dark" id="logout"><a class="nav-link active" aria-current="page" href="#">logout</a></button>

      {{else}}
