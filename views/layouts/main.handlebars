      <button class="btn btn-dark"><a class="nav-link active" aria-current="page" href="/login">login</a></button>
    {{/if}}
     </nav>
     <h1 class="d-flex justify-content-start">Patient Care App</h1>
  </header>
  {{!--  class="container container-fluid mt-5"> --}}
  <main>
    {{{ body }}}
    
  </main>
  <footer>
      
  </footer>

  <!-- Only include the logout script if the user is logged in -->
  {{#if logged_in}}
  <script src="/js/logout.js"></script>
  {{/if}}
</body>

</html>
